{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "rootDir": "./src", // Set rootDir to the folder where your .ts files are located
    "outDir": "./dist", // Optional: Specify output directory for compiled files
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}